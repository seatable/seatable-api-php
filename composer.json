{
  "name": "seatable/seatable-api-php",
  "description": "Simple PHP class to use the SeaTable Web API",
  "type": "library",
  "keywords": ["SeaTable"],
  "homepage": "https://github.com/seatable/seatable-api-php",
  "readme": "README.md",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Christoph Dyllick-Brenzinger"
    },
    {
      "name": "Tom Klingenberg"
    }
  ],
  "support": {
    "forum": "https://forum.seatable.io/",
    "source": "https://github.com/seatable/seatable-api-php"
  },
  "require": {
    "php": ">=7.0",
    "ext-curl": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0.0",
    "internations/http-mock": "^0.14.0",
    "kubawerlos/php-cs-fixer-custom-fixers": "^2.5",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "classmap": ["SeaTableAPI.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "SeaTable\\SeaTableApi\\": "test/unit/"
    }
  },
  "scripts": {
    "test": [
      "@composer --no-plugins --version",
      "@composer --no-plugins validate --no-check-lock --strict",
      "@lint-and-load",
      "@php-test",
      "@composer --no-plugins update --no-scripts --no-progress",
      "@phpunit",
      "@php-cs-fixer",
      "@phpcs",
      "@composer --no-plugins outdated --direct --strict"
    ],
    "lint-and-load": [
      "\"$PHP_BINARY\" -l SeaTableAPI.php && \"$PHP_BINARY\" -r 'require \"SeaTableAPI.php\";'"
    ],
    "php-cs-fixer": [
      "@composer --no-plugins exec -- php-cs-fixer fix ${CI:+--dry-run --diff} --config=.config/php-cs-fixer/.php-cs-fixer.php",
      "git --no-pager diff --check --ws-error-highlight=new"
    ],
    "php-test": [
      "@composer --no-plugins dump-autoload",
      "test/php/autoload.php"
    ],
    "phpcs": [
      "@composer --no-plugins exec phpcs -- --standard=.config/phpcs/config.xml"
    ],
    "phpunit": [
      "@composer --no-plugins -q update --no-scripts --no-progress",
      "@putenv XDEBUG_MODE=coverage",
      "\"$PHP_BINARY\" -d zend.assertions=1 -d assert.exception=1 .config/composer/vendor/bin/phpunit --configuration .config/phpunit/config.xml"
    ]
  },
  "scripts-descriptions": {
    "test": "run all tests"
  },
  "config": {
    "sort-packages": true,
    "vendor-dir": ".config/composer/vendor"
  }
}
